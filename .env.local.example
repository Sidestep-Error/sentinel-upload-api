# Local Docker Mongo mode (recommended for local development)

# Host port used to access MongoDB from your machine.
MONGO_HOST_PORT=28017

# Host port for Nginx reverse proxy.
NGINX_HOST_PORT=8080

# Root credentials used by local Mongo container.
MONGO_ROOT_USERNAME=sentinel
MONGO_ROOT_PASSWORD=change-me

# Application database name.
MONGO_DB=sentinel_upload

# Keep this commented in local mode so compose uses local Mongo credentials.
# MONGODB_URI=

# Scanner settings
SCANNER_MODE=auto
CLAMAV_HOST=clamav
CLAMAV_PORT=3310
CLAMAV_TIMEOUT_SECONDS=5
